<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs')  %>
    <!-- <link rel="stylesheet" href="/css/dashboard.css"> -->
    <!-- <link rel="stylesheet" href="/css/bgcolor.css"> -->
    <link rel="stylesheet" href="/css/navstyles.css">
    <link rel="stylesheet" href="/css/comments.css">
    <link rel="stylesheet" href="/css/commentsnav.css">
     <title>Home Page</title>
</head>
<body style="background-color: #d2e8ffcb;">

    <%- include('./partials/nav.ejs') %>
    
    <div class="container mt-4">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImage %>" width="100px">
        <p><%= blog.body %></p>
    </div>

    <div class="container mt-4">
        <span>Author :</span>
        <img src="<%= blog.createdBy.avatar%>" width="25px"><%= blog.createdBy.fullName %>
    </div>

    <div class="container mt-4">
        <h1>Comments</h1>

        <img src="<%= blog.createdBy.avatar %>" width="25px"> <%= blog.createdBy.fullName%>
    </div>

    <div class="container mb-3">
        <h3>Comment</h3>
        <% if (locals.user) { %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <div class="mb-3">
                        <input type="text" name="content" class="form-control" placeholder="Enter your comment"/>
                    </div>
                    <button class="btn btn-sm btn-primary" type="submit">Add</button>
                </div>
            </form>
            <div class="mt-3">
                <% comments.forEach(comment => {%>
                    <div class="comment">
                        <img src="<%= comment.createdBy.avatar %>" width="50px">
                        <%= comment.createdBy.fullName %>:
                        <pre><%= comment.content %></pre>
                    </div>
                <% }) %>
            </div>
        <% } %>
    </div>
<%- include('./partials/scripts.ejs') %>
</body>
</html>